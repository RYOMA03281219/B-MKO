<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>投稿一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ID</th>
            <th>画像</th>
            <th>投稿商品名</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id%>
              </td>
              <td>
                <%= image_tag item.image(300,300)%>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item.id) %>
              </td>
              <td>
                <% item.genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>