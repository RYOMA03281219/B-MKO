<div class="container">
  <div class="row">
    <div class="col-md-12 mx-sm-auto shadow p-3 mt-3 mb-5 bg-body rounded px-0 my-5">
      <h2 class="text-center mt-2 mb-4">投稿商品詳細画面</h2>
      <div class="row">
        <div class="col-md-5 text-center">
          <%= image_tag @item.get_image(500,500), class: 'img-fluid' %>
        </div>

        <div class="col-md-6">
          <table class="table border-bottom">
            <tr>
              <td>投稿商品名</td>
              <td><%= @item.name %></td>
            </tr>

            <tr>
              <td>投稿者名</td>
              <td><%= @item.customer.name %></td>
            </tr>

            <tr>
              <td>ジャンル名</td>
              <td><%= @genre.name %></td>
            </tr>

            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>

            <tr>
              <td>レビュー</td>
              <td><%= @item.review %></td>
            </tr>

            <tr>
              <td>評価</td>
              <td><%= render "public/items/star", item: @item %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

