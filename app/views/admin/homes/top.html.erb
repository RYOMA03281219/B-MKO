<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= image_tag 'b-mko (2).jpg', size: '1140x300' %>
    </div>

    <div class="col-md-12">
      <h2>投稿一覧</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿商品名</th>
            <th>投稿者</th>
            <th>投稿ジャンル</th>
            <th>投稿ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.image(100,100) %><%= item.name %></td>
              <td><%= item.customer.name %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                  <p>販売中</p>
                <% else %>
                  <p>販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%#= paginate @posts %>

