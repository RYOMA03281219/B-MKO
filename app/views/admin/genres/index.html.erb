<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-md-12">

      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-default btn-lg btn-info" %></td>
        </div>
      <% end %>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <%= form_with model: genre, url: admin_genre_path(genre.id) do |f| %>
                <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
                <td><%= f.submit "編集", class: "btn btn-default btn-lg btn-info" %></td>
              <% end %>
              <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-default btn-lg btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

