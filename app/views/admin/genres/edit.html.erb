<div class="container">
  <h2>ジャンル編集</h2>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= form_with model: @genre, method: :patch do |f| %>
        <div class="form-group">
        <label for="genre_name">ジャンル名</label>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "保存", class: "btn btn-info" %></td>
        <td><%= f.submit "削除", method: :delete, class: "btn btn-danger" %></td>
      </div>
      <% end %>
    </div>
  </div>
</div>