<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="form-group">
        <label for="genre_name">ジャンル名</label>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-default btn-lg btn-info" %></td>
      </div>
      <% end %>
    </div>
  </div>
</div>
