<div class="container">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんのMember Details</h2>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-striped">
        <tr>
          <td>Member Id</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>Member Name</td>
          <td><%= @customer.last_name %></td>
          <td><%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>Email</td>
          <td><%= @custmer.email%></td>
        </tr>

        <tr>
          <td>Member Status</td>
          <td>
            <% if @customer.is_deleted %>
              退会済み
            <%= link_to "有効にする", admin_withdrawal_path(@customer.id), method: :patch, class: "btn btn-success" %>
            <% else %>
              有効
            <%= link_to "退会させる", admin_withdrawal_path(@customer.id), method: :patch, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>

      </table>
      <div class="item-action-btn">
        <%= link_to "Edit", edit_admin_customer_path(@customer), class: "btn btn-default btn-lg btn-info" %>
        <%= link_to "Home", admin_path, class: "btn btn-default btn-lg btn-info "%>
      </div>
    </div>
  </div>
</div>