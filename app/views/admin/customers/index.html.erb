<div class="container">
  <div class="row">
    <div class="col-md-10 mx-sm-auto shadow p-3 mt-3 mb-5 bg-body rounded px-0 my-5">
    <h2 class="text-center mb-4">顧客一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>顧客No</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% unless customer.is_delete %>
                  <p>有効</p>
                <% else %>
                  <p style= "color: red;">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
