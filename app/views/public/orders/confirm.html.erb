<div class="container">
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= image_tag order.item.get_image(50,50) %><%=order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= @postage %></td>
        </tr>

        <tr>
          <th>商品合計</th>
          <td><%= (@total - @postage).to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>請求金額</th>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    <br></br>
    <table class="table table-borderless">
      <tr>
        <th><strong>支払方法</strong></th>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <th>お届け先</th>
        <td>
          〒<%= @customer.postal_code %>
            <%= @customer.address %>
            <%= @customer.last_name %><%= @customer.first_name %>
        </td>
      </tr>
    </table>

    <%= form_with model: @order, url: orders_path do |f| %>
      <div class="submit-button">
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <%= f.hidden_field :billing_amount, :value => @total.round.to_s %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.submit "注文確定", class: "btn btn-sm btn-primary" %>
      <div>
    <% end %>
  </div>
</div>