<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-7">
      <h3><strong>注文情報</strong></h3>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= order.created_at.starftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
        </tr>

        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      <table>
    </div>
    <div class="col-md-5">
      <h3><strong>請求情報</strong></h3>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>

        <tr>
          <th>請求額</th>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>
      </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
