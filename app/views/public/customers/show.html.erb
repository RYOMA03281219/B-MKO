<div class="container">
  <div class="row">
    <div class="col-md-4 mt-3 mb-5">
      <%= render 'public/customers/currentuser', customer: @customer %>
    </div>

    <div class="col-md-8 mt-3 mb-5">
      <h2><%= @customer.name %>さんの投稿一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿名</th>
            <th>投稿者</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image(80,80) %>
                <% end %>
                <%= item.name %>
              </td>
              <td><%= @customer.name %></td>
              <td>
                <div id="item-action-btn">
                  <%= link_to "投稿詳細", item_path(item), class: "btn btn-outline-secondary btn-block" %>
                </div>
                <div id="item-action-btn">
                  <%= link_to "削除", item_path(item), method: :delete, class: "btn btn-outline-danger btn-block" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
