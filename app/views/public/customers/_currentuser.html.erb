<div class="container">
  <div class="row">
    <div class="mb-2">
      <span class="border">
        <h2>User Info</h2>
        <table class="table">
          <tbody>
            <tr>
              <th><%= image_tag customer.get_post_image(100,100) %></th>
            </tr>

            <tr>
              <th>Name</th>
              <th><%= customer.name %></th>
            </tr>

            <tr>
              <th>introduction</th>
              <th><%= customer.introduction %></th>
            </tr>

            <tr>
              <th>いいね一覧</th>
              <th><%#= customer.favorite %></th>
            </tr>
          </tbody>
        </table>
      </span>
    </div>

    <div class="nav-item">
      <%= link_to customers_information_edit_path(current_customer), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog">編集</i>
      <% end %>
    </div>

    <div class="nav-item">
      <%= link_to new_item_path, class: 'btn btn-outline-success btn-block' %>
    </div>
  </div>
</div>