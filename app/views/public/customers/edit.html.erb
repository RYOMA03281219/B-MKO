<div class="container">
  <div class="row">
    <h2><%= @customer.name %>さんの登録情報編集</h2>
    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.file_field :profile_image, accept: "image/*",class: "form-control-file" %>
      </div>

      <div class="form-group">
        <label for="customer_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"user_name", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="user_Introduction">Introduction</label>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-outline-secondary btn-block" %>
      </div>

      <div id="item-action-btn">
        <%= f.submit "退会", customers_cancellation_path, class: "btn btn-sm btn-danger" %>
      </div>

      <div class="error">
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>prohibited this product from being saved:
        <% end %>
      </div>
    <% end %>
  </div>
</div>
