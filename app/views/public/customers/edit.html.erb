<div class="container">
  <div class="row">
    <div class="col-md-7 mx-sm-auto shadow p-3 mb-5 bg-body rounded px-0 my-5 ">
      <h2 class="text-center mb-2"><%= @customer.name %>さんの登録情報編集</h2>
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="table table-borderless">

          <tr>
            <th><%= f.label :Image %></th>
            <td><%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %></td>
          </tr>

          <tr>
            <th><%= f.label :Name %></th>
            <td><%= f.text_field :name, autofocus: true, id: "Customer_name", placeholder: "Name", class: "form-control" %></td>
          </tr>

          <tr>
            <th><%= f.label :Introduction %></th>
            <td><%= f.text_area :introduction, autofocus: true, class: "form-control", placeholder: "説明文", type: "introduction" %></td>
          </tr>
        </table>

        <div class="form-group">
          <%= f.submit "Update Customer", class: "btn btn-outline-secondary btn-block" %>
        </div>

        <div id="item-action-btn">
          <%= link_to "退会", customers_cancellation_path, class: "btn btn-outline-danger btn-block" %>
        </div>

        <div class="error">
          <% if @customer.errors.any? %>
            <%= @customer.errors.count %>prohibited this product from being saved:
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
