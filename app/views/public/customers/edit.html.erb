<div class="container">
  <div class="row">
    <h2>会員情報編集</h2>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <div class="field">
        <%= f.label :氏名 %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div id="item-action-btn">
        <%= f.submit "保存", class: "btn btn-sm btn-primary" %>
        <%= f.submit "退会", customers_cancellation_path, class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </div>
</div>