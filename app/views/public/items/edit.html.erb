<div class="container">
  <h2>商品編集</h2>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">col-md-2 col-md-offset-5
      <%= form_with model: @item, url: item_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>

          <tr>
            <th><%= f.label :商品名 %></th>
            <td><%= f.text_field :name, autofocus: true, id:"item_name" %></td>
          </tr>

          <tr>
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :introduction %></td>
          </tr>

          <tr>
            <th><%= f.label :ジャンル %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          </tr>

          <tr>
            <th><%= f.label :税込価格 %></th>
            <td><%= f.text_field :price %>円</td>
          </tr>

          <tr>
            <th><%= f.field :販売ステータス %></th>
            <td>
              <%= f.radio_button :is_active, true %><%= f.label :販売中%>
              <%= f.radio_button :is_active, false%><%= f.label :販売停止中%>
            </td>
          </tr>
        </table>

        <div id="item-action-btn">
          <%= f.submit "変更", class: "btn btn-default btn-lg btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>