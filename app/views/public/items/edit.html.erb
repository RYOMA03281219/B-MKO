<div class="container">
  <h2>投稿商品編集</h2>
  <div class="row">
    <div class="col-md-3 mt-3 mb-5">
      <%= render 'customers/current_user' %>
    </div>
    
    <div class="col-md-3 mt-3 mb-5">
      <%= form_with model: @item, url: item_path, method: :patch do |f| %>
        <span class="border">
          <div class="col-md-3">
            <%= image_tag @item.get_image(200,200)%>
          </div>
    
          <div class="col-md-6">
            <table class="table table-hover">
              <tr>
                <th>投稿者名</th>
                <td><%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "投稿者名", type: "name" %></td>
              </tr>
              
              <tr>
                <th>投稿商品名</th>
                <td><%= f.text_field :item_name, class: "form-control", placeholder: "投稿商品名", type: "name" %></td>
              </tr>
    
              <tr>
                <th>商品ジャンル</th>
                <td><%= @item. %></td>
              </tr>
              
              <tr>
                <th>商品説明</th>
                <td><%= @genre.name %></td>
              </tr>
              
              <tr>
                <th>商品レビュー</th>
                <td><%= @genre.name %></td>
              </tr>
              
              <tr>
                <th>評価</th>
                <td><%#= @genre.name %></td>
              </tr>
            </table>
          </span>

        <div id="item-action-btn">
          <%= f.submit "変更", class: "btn btn-default btn-lg btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>