<div class="container">
  <h2>投稿商品一覧</h2>
  <div class="row">
    <div class="col-md-3 mt-3 mb-5">
      <%= render 'public/customers/currentuser', customer: @customer %>
    </div>

    <div class="col-md-9 mt-3 mb-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿名</th>
            <th>投稿者名</th>
            <th>商品ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= image_tag item.get_image(100,100) %><%= link_to item.name, item_path(item.customer.id) %></td>
              <td><%= link_to item.customer.name, customer_path(item.customer.id) %></td>
              <td><%= item.genre.name %></td>
              <td><%= render "star", item: item %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
