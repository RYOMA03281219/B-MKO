<div id="star_<%= item.id %>"></div>

<script>
  $(document).on('turbolinks:load', function() {
    let elem = document.querySelector('#star_<%= item.id %>');
    if (elem == null) return;

    elem.innerHTML = ""
    let opt = {
      score: "<%= item.star %>",
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: 'item[star]',
      readOnly: true
    };
    raty(elem, opt);
  });
</script>