<div class="container">
  <h2>投稿商品詳細</h2>
  <div class="row">
    <div class="col-md-3 mb-5">
      <%= render 'public/customers/currentuser', customer: @customer %>
    </div>

    <div class="col-md-9 mb-5 border border-dark">
      <div class="text-center mt-3 mb-3">
        <%= image_tag @item.get_image(200,200) %>
      </div>

      <div class="mt-3">
        <table class="table table-hover">
          <tr>
            <th>投稿者名</th>
            <td><%= @item.customer.name %></td>
          </tr>

          <tr>
            <th>投稿商品名</th>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <th>商品ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <th>商品レビュー</th>
            <td><%= @item.review %></td>
          </tr>

          <tr>
            <th>評価</th>
            <td><%= render "star", item: @item %></td>
          </tr>
          <div>
            <% if @item.customer == current_customer %>
              <%= link_to "削除", item_path(@item), method: :delete %>
            <% end %>
            <% if @item.favorites.count %>
              <p>
                <%= link_to item_favorite_path(@item), method: :delete do %>
                  ♥<%= @item.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to item_favorites_path(@item), method: :post do %>
                  ♡<%= @item.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </div>
        </table>

        <div id = "item-action-btn">
          <%= link_to "編集する", edit_item_path(@item), class: 'btn btn-outline-secondary btn-block' %>
          <%= link_to "削除", items_path(@item), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-outline-danger btn-block' %>
        </div>
      </div>
    </div>
  </div>

    <!--コメント機能の追加-->
    <p><%#= link_to "#{get_image.post_comments.count} コメント", item_path(get_image.id) %></p>

</div>


