<div class="container">
  <h2>投稿商品詳細</h2>
  <div class="row">
    <div class="col-md-3 mt-3 mb-5">
      <%= render 'customers/current_user' %>
    </div>

    <span class="border">
      <div class="col-md-3">
        <%= image_tag @item.get_image(200,200)%>
      </div>

      <div class="col-md-6">
        <table class="table table-hover">
          <tr>
            <th>投稿者名</th>
            <td><%= @item.customer_name %></td>
          </tr>
          
          <tr>
            <th>投稿商品名</th>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <th>商品ジャンル</th>
            <td><%= @item. %></td>
          </tr>
          
          <tr>
            <th>商品説明</th>
            <td><%= @genre.name %></td>
          </tr>
          
          <tr>
            <th>商品レビュー</th>
            <td><%= @genre.name %></td>
          </tr>
          
          <tr>
            <th>評価</th>
            <td><%#= @genre.name %></td>
          </tr>
        </table>
        
        <div class="form-group">
          <%= f.submit "編集", class: 'btn btn-outline-secondary btn-block' %>
        </div>
      </div>
    </span>
  </div>

    <!--コメント機能の追加-->
    <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
    
</div>