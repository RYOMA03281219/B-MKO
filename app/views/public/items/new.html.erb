<div class="container">
  <h2>商品新規登録</h2>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">col-md-2 col-md-offset-5
      <%= form_with model: @item, url: item_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image, accept: "image/*"%></td>
          </tr>

          <tr>
            <th><%= f.label :商品名 %></th>
            <td><%= f.text.field :name, autofocus: true, id: "item_name", class: 'btn-block' %></td>
          </tr>

          <tr>
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :introduction, class: 'btn-block' %></td>
          </tr>

          <tr>
            <th><%= f.label :ジャンル %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, class:'btn-block'%></td>
          </tr>

          <tr>
            <th><%= f.label :税込価格 %></th>
            <td><%= f.text_field :price, class: 'btn-block' %>円</td>
          </tr>

          <tr>
            <th><%= f.label :投稿ステータス %></th>
            <td>
              <%= f.radio_button :is_active, true %><%= f.label :販売中 %>
              <%= f.radio_button :is_active, false %><%= f.label :販売停止中 %>
            </td>
          </tr>
        </table>
        <div is="item-action-btn">
          <%= f.submit "新規登録", class: "btn btn-default btn-lg btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
