<div class="container">
  <div class="row">
    <div class="col-md-7 mx-sm-auto shadow p-3 mb-5 bg-body rounded px-0 my-5 ">
      <h2 class="text-center">新規商品投稿</h2>
      <%= form_with model: @item, url: items_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image, accept: "image/*"%></td>
          </tr>

          <tr>
            <th><%= f.label :商品名 %></th>
            <td><%= f.text_field :name, autofocus: true, id: "item_name", class: "form-control" %></td>
          </tr>

          <tr>
            <th><%= f.label :商品ジャンル %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, class: "btn btn-outline-secondary btn-block" %></td>
          </tr>

          <tr>
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :introduction, autofocus: true, class: "form-control", placeholder: "商品説明", type: "introduction" %></td>
          </tr>

          <tr>
            <th><%= f.label :商品レビュー %></th>
            <td><%= f.text_area :review, autofocus: true, class: "form-control", placeholder: "商品レビュー", type: "review" %></td>
          </tr>

          <tr>
            <th><%= f.label :評価 %></th>
            <td><%= render "star", item: @item %></td>
          </tr>
        </table>

        <div is="item-action-btn">
          <%= f.submit "新規登録", class: "btn btn-outline-success btn-block" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
