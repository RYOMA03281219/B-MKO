<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <div class="field">
          <td><%= f.label :名前 %></td>
          <td>
            <%= f.label :"(姓)"%>
      　　    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%>
          </td>
          <td>
            <%= f.label :"(名)"%>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
          </td>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-sm btn-primary" %>
        </div>
      <% end %>
      <h3>会員登録済の方</h3>
      <%= link_to "こちら", new_customer_session_path %>から新規登録を行ってください。
    </div>
  </div>
</div>
